{
  "name": "@monorepo/webarchiver",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:pereslavtsev/webarchiver.git",
  "author": "Vitaly Pereslavtsev <dev@pereslavtsev.com>",
  "license": "MIT",
  "scripts": {
    "server": "lerna exec --scope webarchiver -- yarn",
    "proxy:run": "envoy -c ./envoy.yaml --log-level debug",
    "postinstall": "husky install && yarn generate-lockfiles",
    "generate-lockfiles": "lerna exec -- generate-lockfile -p package.json -l ../../yarn.lock -w -d -f",
    "docker:local": "docker-compose --profile local",
    "docker:protoc": "rimraf -g **/__generated__ && docker-compose up --build buf --exit-code-from buf"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/config-lerna-scopes": "^17.7.0",
    "cross-env": "^7.0.3",
    "generate-lockfile": "^0.0.12",
    "husky": "^8.0.3",
    "lerna": "^7.2.0",
    "rimraf": "^5.0.1",
    "ts-proto": "^1.157.0"
  },
  "optionalDependencies": {
    "@bufbuild/buf": "^1.26.1"
  }
}
